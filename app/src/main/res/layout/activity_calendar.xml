<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalendarActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="O que você precisa fazer?"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/nameEvent"
            android:layout_width="397dp"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_field"
            android:ems="10"
            android:hint="Ex: Reunião"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="Anote para não esquecer:"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/notesEvent"
            android:layout_width="wrap_content"
            android:layout_height="47dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_field"
            android:hint="@string/example_notes_event"
            android:inputType="text"
            android:maxLines="1"
            android:paddingLeft="10dp"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:text="Horário"
            android:textColor="@color/white" />

        <EditText
            android:id="@+id/timeEvent"
            android:layout_width="90dp"
            android:layout_height="36dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/rounded_field"
            android:paddingLeft="10dp"
            android:textSize="15dp"
            android:ems="10"
            android:hint="Ex:13:00"
            android:inputType="time" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:text="Qual o dia?"
            android:textColor="@color/white" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:background="@color/colorCalendar" />

        <Button
            android:id="@+id/button2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:text="@string/voltar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>